{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <h1>{{ pluralize(projects|length, 'Project') }}</h1>
    {% for project in projects %}
        <article>
            <h2><a href="{{ path('app_project_show', {'id' : project.id}) }}">{{ project.title }}</a></h2>
            <p>{{ project.description }}</p>
        </article>
    {% else %}
        <p>Aucun projet</p>
    {% endfor %}
{% endblock %}
