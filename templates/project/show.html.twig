{% extends 'layouts/base.html.twig' %}

{% set title = project.title ~ " | " ~ website.name %}

{% block body %}
    <div class="row mb-5">
        <div class="col">
            <article class="bg-white rounded shadow">
                <h2 class="p-2">{{ project.title }}</h2>
                {% for image in project.images %}
                    <div class="{{ set_main_image(image.uniqueName, project.mainImage ?? '', 'show') }}">
                        <img src="{{ asset('/uploads/' ~ image.uniqueName) }}" alt="Image" height="250">
                    </div>
                {% endfor %}
                <p class="p-2">{{ project.description }}</p>

                <a href="{{ path('app_project_update', {'id' : project.id}) }}" class="ml-2 mb-2 btn btn-light">{{ button.update }}</a>
                <a href="#" onclick="event.preventDefault(); confirm('Veuillez confirmer la suppression') && document.getElementById('js-project-delete-form').submit();" class="mb-2 btn btn-light">{{ button.delete }}</a>
            </article>
            
            <form id="js-project-delete-form" action="{{ path('app_project_delete', {'id' : project.id}) }}" method="post" style="display: none;">
                <input type="hidden" name="csrf_token" value="{{ csrf_token('project_deletion_' ~ project.id) }}">
                <input type="hidden" name="_method" value="DELETE">
            </form>
        </div>
    </div>
{% endblock %}
