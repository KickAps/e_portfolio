{% extends 'layouts/base.html.twig' %}

{% set title = project.title ~ " | " ~ website.name %}

{% block body %}
    <!-- Project Update Section Heading-->
    <h2 class="page-section-heading text-center text-secondary text-uppercase font-weight-bold">{{ project.title ~ " ~ " ~ tab.update }}</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>

    <div class="p-3 bg-white rounded shadow center-75">
        {{ include('/layouts/partials/_form.html.twig', {project: project}) }}
    </div>
{% endblock %}
