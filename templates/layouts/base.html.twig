<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
        
        <title>{{title ?? website.name }}</title>
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>

    <body id="page-top">
        {{ include('layouts/partials/_navbar.html.twig')}}

        {% block header %}{% endblock %}
        
        <main role="main" class="main-container">
            {{ include('layouts/partials/_flash_messages.html.twig')}}
            {% block body %}{% endblock %}
        </main>

        {% block timeline %}{% endblock %}

        {{ include('layouts/partials/_footer.html.twig')}}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('images') }}
            {{ encore_entry_script_tags('timeline') }}
        {% endblock %}
    </body>
</html>
