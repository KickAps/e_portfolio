{% extends 'layouts/base.html.twig' %}

{% set title = navbar.new ~ " | " ~ website.name %}

{% block body %}
    <!-- New Review Section Heading-->
    <h2 class="page-section-heading text-center text-secondary font-weight-bold">
        {{ 'Laisser un avis : ' }} <a href="{{ url('app_career', {externalId : user.externalId, 'id' : career.id}) }}">{{ career.title }}</a>
    </h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>

    <div class="p-3 bg-white rounded shadow center-50">
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="width-fit-content mx-auto">
            <input type="submit" class="btn btn-primary-custom block" value="{{ button.validate }}" formnovalidate>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}