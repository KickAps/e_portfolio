{% extends 'layouts/base.html.twig' %}

{% block header %}
    <!-- Masthead-->
    <header class="masthead bg-primary text-white text-center">
        {{ include('layouts/partials/_flash_messages.html.twig')}}
        <div class="container-profile d-flex align-items-center flex-column">
            <!-- Masthead Avatar Image-->
            <img class="masthead-avatar mb-5" src="assets/img/avataaars.svg" alt="" />
            <!-- Masthead Heading-->
            <h1 class="masthead-heading text-uppercase mb-0 font-weight-bold">{{ user.firstName }} {{ user.lastName }}</h1>
            <!-- Icon Divider-->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Masthead Subheading-->
            <p class="masthead-subheading font-weight-bold mb-0">{{ user.work }}</p>
        </div>
    </header>
{% endblock %}
