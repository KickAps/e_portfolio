{% extends 'layouts/base.html.twig' %}

{% set title = user.firstName ~ " | " ~ website.name %}

{% block body %}
    <!-- User Section Heading-->
    <h2 class="page-section-heading text-center text-secondary text-uppercase font-weight-bold">{{ user.firstname ~ " ~ " ~ tab.profile }}</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>

    <img class="mb-5 avatar" src="{{ asset('/uploads/avatar/' ~ user.avatar) }}" alt="avatar" width="250" height="250" />

    <!-- Button trigger modal -->
    <button id="modal" type="button" class="btn btn-primary-custom" data-toggle="modal" data-target="#cropModal">
      Launch demo modal
    </button>

    <div class="p-3 bg-white rounded shadow center-50">
    {{ form_start(myForm) }}
        {{ form_widget(myForm) }}
        <div class="width-fit-content mx-auto">
            <input type="submit" class="btn btn-primary-custom block" value="{{ button.validate }}" formnovalidate>
        </div>
    {{ form_end(myForm) }}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="cropModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div>
              <img id="image" width="250px" src="{{ asset('/uploads/avatar/' ~ user.avatar) }}">
            </div>
            <br>
            <form>
                <input type="file" name="img" id="img">
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary m-0 mr-auto" data-dismiss="modal">{{ button.close }}</button>
            <button id="crop" type="button" class="btn btn-primary-custom m-0" data-dismiss="modal">{{ button.validate }}</button>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
