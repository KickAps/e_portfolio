{% extends 'layouts/base.html.twig' %}

{% set title = "TODO | " ~ website.name %}

{% block body %}
    <!-- User Section Heading-->
    <h2 class="page-section-heading text-center text-secondary text-uppercase font-weight-bold">{{ user.firstName ~ " ~ " ~ tab.profile }}</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>
    <div class="p-3 bg-white rounded shadow center-50">
        <span class="title">Prénom & Nom</span>
        <p>{{ user.firstName ~ " " ~ user.lastName }}</p>
        <span class="title">Profession</span>
        <p>{{ user.work }}</p>
        <span class="title">Contacts</span>
        <p>{{ user.email }}</p>
        <span class="title">Lien personnel</span>
        <p><input name="personnal-link-input" type="text" value="{{ url('app_home') ~ user.externalId }}" data-toggle="tooltip" title="Copié!"><p>
        <span class="title">Description</span>
        <p class="text-break text-justify">{{ user.description|nl2br }}</p>

        <div class="width-fit-content mx-auto">
            <a href="{{ path('app_user_update', {externalId : user.externalId}) }}" class="mb-2 btn btn-primary">{{ button.update }}</a>
        </div>
    </div>
{% endblock %}
